@model PurchaseControlSystem.Models.User

@{
    Layout = "~/Views/Shared/_head.cshtml";
}

<section class="light-bg p-5 min-vh-100">
    <div class="container-fluid mt-3">
        <div class="row">
            <div class="col-md-12 mx-auto bg-white px-4 pt-4 pb-3 rounded">
                <h5 class="mb-0 primary-bg text-white p-2 text-center mb-3 rounded">Sign Up</h5>
                @using (Html.BeginForm("Create", "Users", FormMethod.Post, htmlAttributes: new { @class = "row" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="col-md-6">
                        <div class="d-block my-2">
                            <div class="d-inline-block rounded primary-bg text-white py-1 px-3 w-50">
                                <span>Account ID</span>
                            </div>
                            <div class="d-inline-block w-50">
                                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control font rounded w-100 input-height" } })
                                @*<input type="text" class="form-control font rounded w-100 input-height">*@
                            </div>
                        </div>
                        <div class="d-block my-2">
                            <div class="d-inline-block rounded primary-bg text-white py-1 px-3 w-50">
                                <span>Short</span>
                            </div>
                            <div class="d-inline-block w-50">
                                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control font rounded w-100 input-height" } })
                                @*<input type="text" class="form-control font rounded w-100 input-height">*@
                            </div>
                        </div>
                        <div class="d-block my-2">
                            <div class="d-inline-block rounded primary-bg text-white py-1 px-3 w-50">
                                <span>Name</span>
                            </div>
                            <div class="d-inline-block w-50">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control font rounded w-100 input-height" } })
                                <input type="text" class="form-control font rounded w-100 input-height">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">

                        <div class="d-block my-2">
                            <div class="d-inline-block rounded primary-bg text-white py-1 px-3 w-50">
                                <span>Division</span>
                            </div>
                            <div class="d-inline-block w-50">
                                @Html.EditorFor(model => model.DivisionAccess, new { htmlAttributes = new { @class = "form-control font rounded w-100 input-height" } })
                                @*<input type="text" class="form-control font rounded w-100 input-height">*@
                            </div>
                        </div>

                        <div class="d-block my-2">
                            <div class="d-inline-block rounded primary-bg text-white py-1 px-3 w-50">
                                <span>Account Type</span>
                            </div>
                            <div class="d-inline-block w-50">
                                <input type="text" class="form-control font rounded w-100 input-height">
                            </div>
                        </div>
                        <div class="d-block my-2">
                            <div class="d-inline-block rounded primary-bg text-white py-1 px-3 w-50">
                                <span>NL COntrol</span>
                            </div>
                            <div class="d-inline-block w-50">
                                <input type="text" class="form-control font rounded w-100 input-height">
                            </div>
                        </div>
                        <div class="d-block my-2">
                            <div class="d-inline-block rounded primary-bg text-white py-1 px-3 w-50">
                                <span>Supplier Category</span>
                            </div>
                            <div class="d-inline-block w-50">
                                <input type="text" class="form-control font rounded w-100 input-height">
                            </div>
                        </div>
                        <div class="d-block my-2">
                            <div class="d-inline-block rounded primary-bg text-white py-1 px-3 w-50">
                                <span>Email</span>
                            </div>
                            <div class="d-inline-block w-50">
                                <input type="text" class="form-control font rounded w-100 input-height">
                            </div>
                        </div>
                    </div>
                }

                <div>
                    @Html.ActionLink("Back to List", "Index")
                </div>
            </div>
        </div>
    </div>
</section>





