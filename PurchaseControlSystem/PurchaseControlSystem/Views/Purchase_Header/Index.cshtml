            <th>
                @Html.DisplayNameFor(model => model.InitalsBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comments)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost_Center.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department.Department_name)
