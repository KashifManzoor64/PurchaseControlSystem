                <td>
                    @Html.DisplayFor(modelItem => item.AmendedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AmendedDate)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.InitalsBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comments)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cost_Center.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department.Department_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Supplier.Short)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.OrderNo }) |
                    @*@Html.ActionLink("Details", "Details", new { id=item.OrderNo })
                      @Html.ActionLink("Delete", "Delete", new { id=item.OrderNo })|*@
                </td>
            </tr>
        }

    </table>
</body>
</html>
