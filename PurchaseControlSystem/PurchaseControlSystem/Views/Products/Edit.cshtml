                    @Html.DropDownList("Item_CategoryId_FK", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Item_CategoryId_FK, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.Product_Type, htmlAttributes: new { @class = "control-label col-md-2" })
