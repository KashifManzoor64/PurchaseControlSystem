                    @Html.ValidationMessageFor(model => model.Terms_code, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.Item_CategoryId_FK, "Item_CategoryId_FK", htmlAttributes: new { @class = "control-label col-md-2" })
